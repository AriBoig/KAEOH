<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/rasp_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="35dp"
        android:text="Raspberry :"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:visibility="visible" />

    <TextView
        android:id="@+id/rasp_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/raspberry"
        android:layout_alignStart="@+id/raspberry"
        android:layout_below="@+id/raspberry"
        android:layout_marginTop="22dp"
        android:text="ip"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/raspberry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rasp_id"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp"
        android:layout_toEndOf="@+id/rasp_id"
        android:layout_toRightOf="@+id/rasp_id"
        android:text="raspberry"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rasp_ip"
        android:layout_toLeftOf="@+id/raspberry"
        android:layout_toStartOf="@+id/raspberry"
        android:text="IP :"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

</RelativeLayout>