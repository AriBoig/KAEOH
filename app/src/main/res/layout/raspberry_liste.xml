<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/rasp_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:text="Raspberry :"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:visibility="visible" />

    <TextView
        android:id="@+id/rasp_date_ajout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/raspberry"
        android:layout_alignStart="@+id/raspberry"
        android:layout_below="@+id/raspberry"
        android:layout_marginTop="22dp"
        android:text="rasp_date_ajout"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/raspberry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rasp_id"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp"
        android:layout_toEndOf="@+id/rasp_id"
        android:layout_toRightOf="@+id/rasp_id"
        android:text="raspberry"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/date_ajout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rasp_date_ajout"
        android:layout_toLeftOf="@+id/raspberry"
        android:layout_toStartOf="@+id/raspberry"
        android:text="Date ajout :"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/last_com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/date_ajout"
        android:layout_alignRight="@+id/date_ajout"
        android:layout_below="@+id/date_ajout"
        android:layout_marginTop="22dp"
        android:text="last_com :"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/rasp_last_com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rasp_date_ajout"
        android:layout_alignStart="@+id/rasp_date_ajout"
        android:layout_alignTop="@+id/last_com"
        android:text="rasp_last_com"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</RelativeLayout>