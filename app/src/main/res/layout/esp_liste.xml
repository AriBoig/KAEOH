<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name_esp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="11dp"
        android:text="Name ESP :"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/value_esp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/esp_courant_text"
        android:layout_alignRight="@+id/esp_courant_text"
        android:layout_below="@+id/esp_courant_text"
        android:layout_marginTop="17dp"
        android:text="Value ESP :"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="45dp" />

    <TextView
        android:id="@+id/esp_courant_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/name_esp_text"
        android:layout_alignRight="@+id/name_esp_text"
        android:layout_below="@+id/name_esp_text"
        android:layout_marginTop="16dp"
        android:text="Type courant :"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="74dp" />

    <TextView
        android:id="@+id/unit_esp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/name_esp_text"
        android:layout_alignRight="@+id/name_esp_text"
        android:layout_below="@+id/value_esp_text"
        android:layout_marginTop="11dp"
        android:text="Unit :"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="101dp" />

    <TextView
        android:id="@+id/name_esp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/esp_courant_text"
        android:layout_marginLeft="83dp"
        android:layout_marginStart="83dp"
        android:layout_toEndOf="@+id/esp_courant_text"
        android:layout_toRightOf="@+id/esp_courant_text"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/esp_courant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/esp_courant_text"
        android:layout_alignBottom="@+id/esp_courant_text"
        android:layout_alignEnd="@+id/name_esp"
        android:layout_alignRight="@+id/name_esp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/value_esp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/esp_courant"
        android:layout_alignStart="@+id/esp_courant"
        android:layout_alignTop="@+id/value_esp_text"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/unit_esp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/unit_esp_text"
        android:layout_alignBottom="@+id/unit_esp_text"
        android:layout_alignLeft="@+id/value_esp"
        android:layout_alignStart="@+id/value_esp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
</RelativeLayout>